generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(cuid())
  name      String
  image     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id                     String   @id @default(cuid())
  product_id             String   @unique @default(cuid())
  categoryId             String
  category               Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name                   String
  description            String
  imagesRaw              String
  itemsPerPallet         Int
  baseCostEGP            Float
  sellingPricePerItemUSD Float
  isActive               Boolean  @default(true)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model AppSettings {
  id                        Int      @id @default(1)
  whatsappNumber            String
  currencyLabel             String
  conversionRate            Float    @default(47.0)
  deliveryCostPerPalletUSD  Float    @default(2200.0)
  halfPalletDeliveryCostUSD Float    @default(1200.0)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}
